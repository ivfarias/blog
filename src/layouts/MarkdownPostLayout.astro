---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout>
  <article class="prose prose-lg">
    <h1 class="text-3xl md:text-5xl font-extrabold h-20">{frontmatter.title}</h1>
  <p>{frontmatter.description}</p>
  <p>Written by: {frontmatter.author}</p>
  <p>Published on: {frontmatter.pubDate.slice(0,10)}</p>
  <img class="prose-img:rounded-xl" src={frontmatter.image.url} alt={frontmatter.image.alt} />
  <slot class="prose prose-sm"/>
  <div>
    {frontmatter.tags.map((tag) => (
      <p><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
  </div>
  </article>
</BaseLayout>
